{
  "name": "boris",
  "version": "0.0.9",
  "description": "Local electron app to help manage credentials, track finances...",
  "main": "main.js",
  "type": "module",
  "bin": {
    "boris": "dist/main.js"
  },
  "scripts": {
    "test": "jest",
    "start": "electron .",
    "watch": "nodemon --exec electron .",
    "build": "electron-builder --linux snap",
    "local-build": "electron-builder build --dir"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fodare/BorisElectron.git"
  },
  "keywords": [
    "power-app"
  ],
  "author": "open-ops",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fodare/BorisElectron/issues"
  },
  "homepage": "https://github.com/fodare/BorisElectron#readme",
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "babel-jest": "^30.0.5",
    "electron": "^37.2.3",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "electron-builder": "^23.6.0"
  },
  "build": {
    "appId": "com.openops.boris",
    "productName": "Boris",
    "asar": true,
    "files": [
      "**/*",
      "!Data/",
      "!tests/",
      "!.github/",
      "!README.md",
      "!LICENSE",
      "!jest.config.js"
    ],
    "linux": {
      "target": [
        "snap",
        "deb"
      ],
      "icon": "Assets/"
    },
    "snap": {
      "grade": "stable",
      "confinement": "strict",
      "plugs": [
        "home",
        "network",
        "desktop"
      ]
    },
    "publish": [
      {
        "provider": "github"
      }
    ]
  }
}